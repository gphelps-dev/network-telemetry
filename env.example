# Network Telemetry Configuration
# Copy this file to .env and modify the values as needed

# InfluxDB Configuration
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123!
INFLUXDB_ORG=nflx
INFLUXDB_BUCKET=default
INFLUXDB_TOKEN=your_influxdb_token_here

# Network Diagnostics Configuration
# Comma-separated list of FQDNs to monitor for network diagnostics
# Support teams can modify this to diagnose issues to specific destinations
NETWORK_DESTINATIONS=google.com,github.com,stackoverflow.com

# Telemetry Collection Settings
TELEMETRY_COLLECT_INTERVAL=60

# GitHub OAuth Configuration (Required)
GITHUB_OAUTH_ENABLED=true
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_SCOPES=user
GITHUB_ALLOW_SIGN_UP=true
GITHUB_ALLOWED_ORGANIZATIONS=
GITHUB_TEAM_IDS= 